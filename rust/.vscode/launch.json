{
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (lldb)",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": [
                "--year",
                "2022",
                "--day",
                "01"
            ],
            "env": {
                "CARGO_TERM_COLOR": "always"
            },
            "cargo": {
                "cwd": "${workspaceFolder}",
                "args": [
                    "build",
                    "--bin",
                    "aoc"
                ]
            }
        },
