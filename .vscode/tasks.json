{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build active C++ file",
			"type": "shell",
			"command": "g++",
			"args": [
                "-O2",
				"-g",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"${file}"
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}
